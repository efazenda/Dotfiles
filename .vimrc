" ~/.vim/vimrc Configuration File by Edouard Fazenda <edouard.fazenda@gmail.com>

" Global Options 
set number
set numberwidth=4
set wrap
set showmatch
set matchtime=15
set antialias
set autochdir
set autoindent
set autoread
set autowrite
set background=dark
set backspace=2
set backup
set backupcopy=auto
set backupext=.vbak
set backupskip=/tmp/*,$TMPDIR/*,$TMP/*,$TEMP/*,test*
set backupdir=/tmp
set binary
set bioskey
set nobomb
set breakat=^I!@*-+;:,./?
set casemap=internal,keepascii
set cdpath=$HOME
set cedit=^F
