" ~/.vim/vimrc Configuration File by Edouard Fazenda <edouard.fazenda@gmail.com>

" Global Options
" URL for reference documentation : http://vimdoc.sourceforge.net/htmldoc/quickref.html#Q_op and http://vimdoc.sourceforge.net/htmldoc/options.html

set nocompatible 
set number
set numberwidth=4
set wrap
set showmatch
set matchtime=15
set antialias
set autochdir
set autoindent
set autoread
set autowrite
set background=dark
set backspace=2
set backup
set backupcopy=auto
set backupext=.vbak
set backupskip=/tmp/*,$TMPDIR/*,$TMP/*,$TEMP/*,test*
set backupdir=/tmp
set binary
set bioskey
set nobomb
set breakat=^I!@*-+;:,./?
set casemap=internal,keepascii
set cdpath=$HOME
set cedit=^F
set cindent
set cinkeys=0{,0},0),:,0#,!^F,o,O,e
set cinwords=if,else,while,do,for,switch
set cmdheight=3
set cmdwinheight=7
set comments=s1:/*,mb:*,ex:*/,://,b:#,:%,:XCOMM,n:>,fb:-
set commentstring=/*%s*/
set formatoptions=tcqr
set complete=.,w,b,u,t,i
set completeopt=menu,preview 
set confirm
set copyindent
set cpoptions=aABceFs
set cryptmethod=blowfish
set cursorbind
set cursorcolumn "To bind with a key mapping
set cursorline "To bind with a key mapping
set debug=msg,throw
set dictionary+=/usr/share/dict/words
set directory=/tmp
set display=lastline,uhex
set encoding=utf-8
set endofline
set esckeys
set expandtab
set fileformat=unix
set foldcolumn=1
set nofoldenable
set foldignore=#
set foldlevel=0
set foldmethod=manual
